{
    "name": "seagoj/Devtools",
    "description": "Tools for PHP development",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/nrk/predis"
        }
    ],
    "require": {
        "predis/predis": ">=0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
	    "phpunit/php-invoker": "1.1.*",
        "phpunit/dbunit": "1.2.*",
        "phpunit/phpunit-selenium": "1.3.*",
        "phpunit/phpunit-story": "1.0.*"
    },
    "scripts": {
	    "pre-install-cmd": [
	        "rm lib/Predis",
            "rm lib/Devtools"
	    ],
        "post-install-cmd": [
            "ln -s ../vendor/predis/predis/lib/Predis lib/Predis",
            "ln -s .. lib/Devtools"
	    ]
    },
    "config": {}
}
