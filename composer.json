{
    "name": "Devtools",
    "description": "Tools for PHP development",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/nrk/predis"
        }
    ],
    "require": {
        "predis/predis": ">=0.8"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/php-invoker": "1.1.*",
        "phpunit/dbunit": "1.2.*",
        "phpunit/phpunit-selenium": "1.3.*",
        "phpunit/phpunit-story": "1.0.*",
        "phpspec/phpspec": "~2.0"
    },
    "scripts": {
        "pre-install-cmd": [
        ],
        "post-install-cmd": [
            "rm -rf vendor/predis-lib",
            "rm -f vendor/Devtools",
            "mv vendor/predis vendor/predis-lib",
            "ln -s predis-lib/predis/lib/Predis vendor/Predis",
            "ln -s .. vendor/Devtools"
        ]
    },
    "config": {},
    "autoload": {
        "psr-4": {"Devtools\\": "vendor/Devtools"}
    }
}
